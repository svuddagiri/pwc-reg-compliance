# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Azure Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_KEY=your-search-admin-key
AZURE_SEARCH_INDEX_NAME=regulatory-documents

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=documents

# Azure Document Intelligence Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-doc-intelligence.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-doc-intelligence-key

# SQL Database Configuration (for local SQL Server on Windows)
SQL_USE_AZURE=false
SQL_SERVER=localhost
SQL_DATABASE=regulatory_compliance
SQL_USERNAME=sa
SQL_PASSWORD=YourStrong@Passw0rd

# For Azure SQL Database, uncomment and configure these:
# SQL_USE_AZURE=true
# SQL_SERVER=your-server.database.windows.net
# SQL_DATABASE=regulatory_compliance
# SQL_USERNAME=your-username
# SQL_PASSWORD=your-password

# Optional: Cosmos DB Configuration (if using)
# COSMOS_ENDPOINT=https://your-cosmos.documents.azure.com:443/
# COSMOS_KEY=your-cosmos-key
# COSMOS_DATABASE_NAME=regulatory-documents

# Optional: Redis Configuration (if using)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Application Settings
SECRET_KEY=your-secret-key-here
API_PREFIX=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Settings
MAX_RESPONSE_TIME_SECONDS=5.0
CHUNK_SIZE_TOKENS=750
CHUNK_OVERLAP_TOKENS=50
MAX_DOCUMENTS_MVP=50
TOP_K_RETRIEVAL=5
HYBRID_SEARCH_WEIGHT=0.5

# For Windows users: Use forward slashes (/) or escaped backslashes (\\) in paths
# Example: C:/Users/YourName/Documents or C:\\Users\\YourName\\Documents